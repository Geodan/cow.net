<Window x:Class="Cow.Net.test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Cow.Net.test.UI.Controls"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <controls:ConnectionInfoView x:Name="ConnectionInfoView" HorizontalAlignment="Stretch"/>
                <controls:SocketServerView x:Name="SocketServerView" />
                <controls:PeerView x:Name="PeerView" />
                <controls:ProjectView x:Name="ProjectView" />
                <controls:UserView x:Name="UserView" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
